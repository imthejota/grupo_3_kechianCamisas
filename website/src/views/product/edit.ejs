<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head.ejs', {estilo: 'modificar', titulo: 'Modificar producto'}) %>

<body>
        <%- include ('../partials/header.ejs') %>

            <main>
                <div class="c1">
                    <form  action="/products/actualizar/<%= product.id %>?m=PUT" method="POST" class="c2" enctype="multipart/form-data">

                        
                        
                        <p class="modificar"> Modificar producto </p>
                        
                        <input type="hidden" name="id" value="<%= product.id %> ">
                        <div>
                            <label class="elemento" for="nombre-producto"></label>
                            <input class = "grl-top" type="text" id="nombre-producto" name="name" value="<%= product.name %> " >
                        </div>

                        <div>
                            <label class="elemento" for="descripción"></label>
                            <input class="grl" type="text" id="descripción" name="description" value="<%= product.description %>" >
                        </div>


                         
                        <div>
                            <label class="elemento" for="categoria"></label>
                            <select class="grl" type="text" id="categoria" name="category" value="<%= product.category %>">
                                <option value="estampada">Estampada</option>
                                <option value="lisa">Lisa</option>
                            </select>
                        </div>

                        <div>
                            <label class="elemento" for="imagen"></label>
                            <input class="grl" type="file" id="imagen" name="image" value="<%= product.image %>" >
                        </div>

                        <div class="checkTalles">
                            <% sizes.forEach(element=> { %>
                                <div class="checkboxTalles">
                                    <input class="elemento checkbox" type="checkbox" id="talle" name="sizes" value="<%= element.id %>">
                                    <label class="elemento labelCheckbox" for="talle">
                                        <%= element.size %>
                                    </label>
                                </div>
                                <% }) %>
                        </div>

                        <div>
                            <label class="elemento" for="precio"></label>
                            <input class="grl" type="number" id="precio" name="price" value="<%= product.price %>" >
                        </div>

                        <div>
                            <label class="elemento" for="descuento"></label>
                            <input class="grl" type="number" id="descuento" name="discount" value="<%= product.discount %>" >
                        </div>

                        <div class="modificar">
                            <button class="boton" type="submit">GUARDAR</button>
                        </div>

                    </form>
                    
                </div>
            </main>
            <%- include ('../partials/footer.ejs') %>

    </body>

</html>


