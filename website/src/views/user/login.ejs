<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head.ejs', {estilo: 'login', titulo: 'Inicio Sesión'}) %>
<body>
    <%- include ('../partials/header.ejs') %>

    <main>
        <div class="caja1">
            <form action="/access" method="POST" class="caja2">
                <p class="elemento1"> INGRESÁ TUS DATOS </p>
                
                <div class="errores">
                    <ul class="ul-login-errores"> 
                    </ul>
                </div>
                
                <fieldset class="elemento2">
                    <label for="correo"></label>
                    <input type="email" placeholder="Email" id="correo" name="correo"  >

                    <% if (locals.errores && locals.errores.correo) { %>
                        <p class="feedback">
                            <%= locals.errores.correo.msg %> 
                        </p> 
                    <% } %>      
                </fieldset>

                <fieldset class="elemento2">
                    <label for="contraseña"></label>
                    <input type="password" placeholder="Contraseña" id="contraseña" name="contraseña" value="<%= locals.errores && !locals.errores.contraseña && locals.data ? locals.data.contraseña : null %>" >

                    <% if (locals.errores && locals.errores.contraseña) { %>
                        <p class="feedback">
                            <%= locals.errores.contraseña.msg %> 
                        </p> 
                    <% } %>  
                </fieldset>

                <fieldset class="elemento4">
                    <input type="checkbox" id="recuerdame" name="recuerdame" value="recuerdame">
                    <label for="recuerdame">Recuérdame</label>
                </fieldset>

                <a href="#" class="elemento5">¿Olvidaste tu contraseña?</a>

                <fieldset class="boton_IniciarSesion">
                <button type="submit" class="boton">INICIAR SESIÓN</button>
                </fieldset>

                <fieldset class="elemento6">
                    <a href="/register">CREAR CUENTA</a>
                </fieldset>
            </form>
        </div>
        <script src="/validationsFront/userLoginValidation.js" type="text/javascript"></script>
    </main>

    <%- include ('../partials/footer.ejs') %>
</body>

</html>