<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head.ejs', {estilo: 'login', titulo: 'Inicio Sesión'}) %>
<body>
    <%- include ('../partials/header.ejs') %>

    <main>
        <div class="caja1">
            <form action="/access" method="POST" class="caja2">
                <p class="elemento1"> INGRESÁ TUS DATOS </p>
                
                <div class="errores">
                    <!-- <ul id="ul-login-errores">
                    </ul> --></div>
                
                <div class="elemento2">
                    <label for="correo"></label>
                    <input type="email" id="correo" name="correo"  >

                    <% if (locals.errores && locals.errores.correo) { %>
                        <p class="feedback">
                            <%= locals.errores.correo.msg %> 
                        </p> 
                    <% } %>     
                    <br>
                </div>

                <div class="elemento3">
                    <label for="contraseña"></label>
                    <input type="password" id="contraseña" name="contraseña" value="<%= locals.errores && !locals.errores.contraseña && locals.data ? locals.data.contraseña : null %>" >

                    <% if (locals.errores && locals.errores.contraseña) { %>
                        <p class="feedback">
                            <%= locals.errores.contraseña.msg %> 
                        </p> 
                    <% } %>  
                    
                    <br>
                </div>

                <div class="elemento4">
                    <input type="checkbox" id="recuerdame" name="recuerdame" value="recuerdame">
                    <label for="recuerdame">Recuérdame</label><br>
                </div>

                <a href="#" class="elemento5">¿Olvidaste tu contraseña?</a><br>

                <div class="boton_IniciarSesion">
                <button type="submit" class="boton">INICIAR SESIÓN</button>
                </div>

                <div class="elemento6">
                    <a href="/register">CREAR CUENTA</a>
                </div>
            </form>
        </div>
        <script src="/validationsFront/userLoginValidation.js" type="text/javascript"></script>
    </main>

    <%- include ('../partials/footer.ejs') %>
</body>

</html>