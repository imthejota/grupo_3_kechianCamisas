<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head.ejs', {estilo: 'login', titulo: 'Inicio Sesión'}) %>
<body>
    <%- include ('../partials/header.ejs') %>

    <main>
        <div class="caja1">
            <form action="/access" method="POST" class="caja2">
                <p class="elemento1"> INGRESÁ TUS DATOS </p>

                <div class="elemento2">
                    <label for="correo"></label>
                    <input 
                    type="email" 
                    id="correo" 
                    name="correo" 
                    value="<%= locals.errores && !locals.errores.email && locals.data ? locals.data.email : null %> " 
                    required>

                    <% if (locals.errors && locals.errors.email) { %>
                        <p class="feedback">
                            <%= locals.errores.email.msg %> 
                        </p> 
                    <% } %>     
                    <br>
                </div>

                <div class="elemento3">
                    <label for="contraseña"></label>
                    <input 
                    type="password" 
                    id="contraseña" 
                    name="contraseña" 
                    value="<%= locals.errores && !locals.errores.password && locals.data ? locals.data.password : null %>" 
                    required>

                    <% if (locals.errors && locals.errors.password) { %>
                        <p class="feedback">
                            <%= locals.errores.password.msg %> 
                        </p> 
                    <% } %>  
                    
                    
                    <br>
                </div>

                <div class="elemento4">
                    <input type="checkbox" id="recuerdame" name="recuerdame" value="recuerdame">
                    <label for="recuerdame">Recuérdame</label><br>
                </div>

                <a href="" class="elemento5">¿Olvidaste tu constraseña?</a><br>

                <div class="boton_IniciarSesion">
                <input type="submit" value="INICIAR SESIÓN" class="boton">
                </div>

                <div class="elemento6">
                    <a href="/register">CREAR CUENTA</a>
                </div>
            </form>
        </div>
    </main>

    <%- include ('../partials/footer.ejs') %>
</body>

</html>