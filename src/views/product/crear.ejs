<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head.ejs', {estilo: 'crear', titulo: 'Crear nuevo producto'}) %>

    <body>
        <%- include ('../partials/header.ejs') %>

            <main>
                <div class="c1">
                    <form class="c2" action="/products/guardar" method="POST" enctype="multipart/form-data">
                        <p class="crea"> Creá un nuevo producto </p>
                        
                        <div class="errores">
                            <ul></ul>
                        </div>

                        <div>
                            <label class="elemento" for="nombre-producto"></label>
                            <input class="grl-top" type="text" id="name" name="name" placeholder="Nombre del producto">
                        </div>

                        <div>
                            <label class="elemento" for="descripcion"></label>
                            <input class="grl" type="text" id="descripcion" name="description" placeholder="Descripción">
                        </div>


                        <div>
                            <label class="elemento" for="categoria"></label>
                            <select class="grl" type="text" id="categoria" name="category" placeholder="Categoría">
                                <option value="estampada">Estampada</option>
                                <option value="lisa">Lisa</option>
                            </select>
                        </div>

                        <div>
                            <label class="elemento" for="imagen"></label>
                            <input class="grl" type="file" id="imagen" name="image">
                        </div>

                        <div>
                            <label class="elemento" for="talle"></label>
                            <select class="grl" type="number" id="talle" name="size">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <option value="extraLarge">Extra large</option>    
                    </select><br>
                        </div>

                        <div>
                            <label class="elemento" for="precio"></label>
                            <input class="grl" type="number" id="precio" name="price" placeholder="Precio">
                        </div>

                        <div>
                            <label class="elemento" for="descuento"></label>
                            <input class="grl" type="number" id="descuento" name="discount" placeholder="Descuento">
                        </div>


                        <div class="agrega">
                            <button type="submit">Guardar producto</button>
                        </div>


                    </form>
                </div>
                <script src="/validationsFront/productCreateValidations.js" type="text/javascript"></script>
            </main>


            <%- include ('../partials/footer.ejs') %>

    </body>

</html>